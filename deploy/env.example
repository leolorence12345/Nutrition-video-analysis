# Nutrition Video Analysis API Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API Settings
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=False

# =============================================================================
# Security
# =============================================================================
REQUIRE_API_KEY=False
API_KEY=your-secret-api-key-here
CORS_ORIGINS=*  # In production: https://yourdomain.com

# =============================================================================
# External APIs
# =============================================================================
# Required for calorie estimation fallback
GEMINI_API_KEY=your-gemini-api-key-here

# =============================================================================
# File Storage
# =============================================================================
# Leave default for Docker, change for custom deployment
# UPLOAD_DIR=/app/data/uploads
# OUTPUT_DIR=/app/data/outputs
# MODEL_CACHE_DIR=/app/models

# =============================================================================
# Database
# =============================================================================
# SQLite (default for MVP)
DATABASE_URL=sqlite:///./data/nutrition.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://user:password@localhost:5432/nutrition_db

# =============================================================================
# Video Processing
# =============================================================================
MAX_VIDEO_SIZE_MB=500
FRAME_SKIP=10
MAX_FRAMES=60
RESIZE_WIDTH=800

# =============================================================================
# Model Settings
# =============================================================================
SAM2_CHECKPOINT=checkpoints/sam2.1_hiera_base_plus.pt
SAM2_CONFIG=configs/sam2.1/sam2.1_hiera_b+.yaml
FLORENCE2_MODEL=microsoft/Florence-2-base-ft
METRIC3D_MODEL=metric3d_vit_small

# =============================================================================
# Tracking Configuration
# =============================================================================
DETECTION_INTERVAL=30
IOU_MATCH_THRESHOLD=0.20

# =============================================================================
# Nutrition Analysis
# =============================================================================
REFERENCE_PLATE_DIAMETER_CM=25.0
CALORIE_SIMILARITY_THRESHOLD=0.5

# =============================================================================
# GPU/Compute
# =============================================================================
DEVICE=cuda
USE_FP16=True

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO

